<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <p>Number 1: <input type="number" id="number1Field"/></p>
    <p>Number 2: <input type="number" id="number2Field"/></p>

    <input type="button" value="Add" id="addButton" />
    <input type="button" value="Subtract" id="subtractButton" />
    <input type="button" value="Multiply" id="multiplyButton" />
    <input type="button" value="Divide" id="divideButton" />

    <p>Answer: <input type="number" id="answerField" readonly/></p>

    <script>
        window.onload = handleOnload;

        function handleOnload(){
            const addButtonEl = document.getElementById("addButton");
            const subtractButtonEl = document.getElementById("subtractButton");
            const multiplyButtonEl = document.getElementById("multiplyButton");
            const divideButtonEl = document.getElementById("divideButton");

            addButtonEl.onclick = handleAddOnclick;
            subtractButtonEl.onclick = handleSubtractOnclick;
            multiplyButtonEl.onclick = handleMultiplyOnclick;
            divideButtonEl.onclick = handleDivideOnclick;
        }

        function handleAddOnclick(){
            console.log("Add button clicked");
            const numberOneInputEl = document.getElementById("number1Field");
            const numberTwoInputEl = document.getElementById("number2Field");
            const answerInputEl = document.getElementById("answerField");

            const numberOne = Number(numberOneInputEl.value);
            const numberTwo = Number(numberTwoInputEl.value);

            answerInputEl.value = numberOne + numberTwo;
            
            numberOneInputEl.value = "";
            numberTwoInputEl.value = "";
        }
        function handleSubtractOnclick(){
            console.log("Subtract button clicked");
            const numberOneInputEl = document.getElementById("number1Field");
            const numberTwoInputEl = document.getElementById("number2Field");
            const answerInputEl = document.getElementById("answerField");

            const numberOne = Number(numberOneInputEl.value);
            const numberTwo = Number(numberTwoInputEl.value);

            answerInputEl.value = numberOne - numberTwo;

            numberOneInputEl.value = "";
            numberTwoInputEl.value = "";
        }
        function handleMultiplyOnclick(){
            console.log("Multiply button clicked");

            const numberOneInputEl = document.getElementById("number1Field");
            const numberTwoInputEl = document.getElementById("number2Field");
            const answerInputEl = document.getElementById("answerField");

            const numberOne = Number(numberOneInputEl.value);
            const numberTwo = Number(numberTwoInputEl.value);

            answerInputEl.value = numberOne * numberTwo;

            numberOneInputEl.value = "";
            numberTwoInputEl.value = "";
        }
        function handleDivideOnclick(){
            console.log("Divide button clicked");

            const numberOneInputEl = document.getElementById("number1Field");
            const numberTwoInputEl = document.getElementById("number2Field");
            const answerInputEl = document.getElementById("answerField");

            const numberOne = Number(numberOneInputEl.value);
            const numberTwo = Number(numberTwoInputEl.value);

            answerInputEl.value = numberOne / numberTwo;

            numberOneInputEl.value = "";
            numberTwoInputEl.value = "";
        }
    </script>
</body>
</html>